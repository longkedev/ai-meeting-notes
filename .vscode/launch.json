{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/main.go",
            "env": {
                "GIN_MODE": "debug",
                "LOG_LEVEL": "debug"
            },
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/main.go",
            "env": {
                "GIN_MODE": "debug",
                "LOG_LEVEL": "debug"
            },
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Test Current Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/backend",
            "env": {
                "GO_ENV": "test"
            },
            "args": [
                "-test.v",
                "-test.run",
                "${input:testName}"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test function name",
            "default": ".*",
            "type": "promptString"
        }
    ]
}
